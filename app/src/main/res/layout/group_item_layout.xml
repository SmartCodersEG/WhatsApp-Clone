<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="horizontal"
    android:padding="1dp"
    >


    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/group_image_view"
        app:srcCompat="@drawable/ic_group"
        android:layout_gravity="start"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="8dp"
        app:civ_border_color="@android:color/transparent"
        android:cropToPadding="true"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/group_name_text_view"
                android:layout_gravity="left"
                tools:text="Friends for ever"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_text_view"
                tools:text="9/7/2020"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/light_gray"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/last_message_sender_name_text_view"
                tools:text="Mohamed"
                android:textSize="12sp"

                android:layout_marginEnd="1dp"
                android:textColor="@android:color/black"
                />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:srcCompat="@drawable/ic_check_24"
                android:layout_marginEnd="1dp"
                android:id="@+id/message_checked_image_view"
                app:tint="@color/light_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/group_last_message_text_view"
            tools:text="Last seen"
            android:textSize="12sp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="4dp"
            android:textColor="@android:color/black"
            />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>