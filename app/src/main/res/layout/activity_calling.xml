<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.whatsapp.ui.ui.activities.CallingActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:color/holo_orange_light"
            android:scaleType="centerCrop"
            android:id="@+id/caller_image_view"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/caller_name_text_view"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="Mahmoud Sanad"
            android:textSize="36sp"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/accept_call_button"
                android:text="accept"
                android:background="@drawable/round_button"
                android:backgroundTint="@android:color/holo_green_light"
                android:layout_margin="16dp"
                android:textColor="@android:color/white"
                android:visibility="gone"
                />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_call_button"
                android:text="cancel"
                android:background="@drawable/round_button"
                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_margin="16dp"
                android:textColor="@android:color/white"

                />

        </LinearLayout>

    </FrameLayout>
</layout>